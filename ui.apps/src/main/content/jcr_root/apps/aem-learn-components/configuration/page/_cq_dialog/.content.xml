<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="ALM Configuration"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[alm.admin.configuration]">
    <content jcr:primaryType="nt:unstructured"
             sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                
                    <title jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                        name="./jcr:title"
                        value="ALM"/>

                    <usage
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldDescription="ALM Usage"
                        fieldLabel="ALM Usage"
                        name="./usageType"
                        cq:showOnCreate="{Boolean}true">
                        
                        <items jcr:primaryType="nt:unstructured">
                            <sites
                                jcr:primaryType="nt:unstructured"
                                text="AME+Sites"
                                value="sites"/>
                            <es
                                jcr:primaryType="nt:unstructured"
                                text="AEM+ES+Prime"
                                value="es"/>
                            <magento
                                jcr:primaryType="nt:unstructured"
                                text="AEM+Magento+Prime"
                                value="magento"/>
                        </items>
                    </usage>

                    <primeUrl 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Prime Url"
                        fieldDescription="Prime Url."
                        name="./primeUrl"
                        cq:showOnCreate="{Boolean}true"/>

                    <accountId 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="AccountId"
                        fieldDescription="AccountId"
                        name="./accountId"
                        cq:showOnCreate="{Boolean}true"/>

                    <clientId 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Client Id"
                        fieldDescription="Client Id"
                        name="./clientId"
                        cq:showOnCreate="{Boolean}true"/>

                    <clientSecret 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Client Secret"
                        fieldDescription="Client Secret"
                        name="./clientSecret"
                        cq:showOnCreate="{Boolean}true"/>

                    <primeRegister 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Prime Register Url"
                        fieldDescription="Prime Register Url"
                        name="./primeRegisterUrl"
                        cq:showOnCreate="{Boolean}true"/>

                    <esBase 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="ES Base URL"
                        fieldDescription="ES Base URL"
                        name="./esBaseUrl"
                        cq:showOnCreate="{Boolean}true"/>
                    
                    <refreshToken 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Admin Refresh Token"
                        fieldDescription="Admin Refresh Token"
                        name="./refreshToken"
                        cq:showOnCreate="{Boolean}true"/>

                    <authorRefreshToken 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Author Refresh Token"
                        fieldDescription="Author Refresh Token"
                        name="./authorRefreshToken"
                        cq:showOnCreate="{Boolean}true"/>

                    <almBaseURL 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Prime ALM URL"
                        fieldDescription="Prime ALM URL"
                        name="./almBaseURL"
                        cq:showOnCreate="{Boolean}true"/>

                    <primeJsonUrl 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Prime JSON Url"
                        fieldDescription="Prime JSON Url"
                        name="./primeJsonUrl"
                        cq:showOnCreate="{Boolean}true"/>

                    <primeApiURL 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Prime API URL"
                        fieldDescription="Prime API prefix that should be used. This will be useful in case API calls need to be directed to custom backend"
                        name="./commonConfig.primeApiPrefix"
                        value="/primeapi/v2"
                        cq:showOnCreate="{Boolean}true"/>

                    <primeCdnBaseUrl 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Prime CDN Base Url"
                        fieldDescription="Prime CDN Base Url"
                        name="./primeCdnBaseUrl"
                        cq:showOnCreate="{Boolean}true"/>

                    <instancePath 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Instance Path"
                        fieldDescription="Instance Path"
                        name="./instancePath"
                        cq:showOnCreate="{Boolean}true"/>

                    <catalogPath 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Catalog Path"
                        fieldDescription="Catalog Path"
                        name="./catalogPath"
                        cq:showOnCreate="{Boolean}true"/>

                    <trainingOverviewPath 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Training Overview Path"
                        fieldDescription="Training Overview Path"
                        name="./trainingOverviewPath"
                        cq:showOnCreate="{Boolean}true"/>

                    <communityPath 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Community Path"
                        fieldDescription="CommunityPath"
                        name="./communityPath"
                        cq:showOnCreate="{Boolean}true"/>

                    <locale
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldDescription="Locale"
                        fieldLabel="Locale"
                        name="./locale"
                        cq:showOnCreate="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <us
                                jcr:primaryType="nt:unstructured"
                                text="en-US"
                                value="en-US"/>
                        </items>
                    </locale>

                    <siteMap
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        checked="true"
                        name="./siteMap"
                        text="Site Map"
                        value="siteMap"
                        cq:showOnCreate="{Boolean}true"/>

                    <higherOrderEnroll
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        checked="false"
                        name="./commonConfig.ignoreHigherOrderLOEnrollment"
                        text="Ignore Higher Order LO Enrollment"
                        value="false"
                        cq:showOnCreate="{Boolean}true"/>
                     <higherOrderEnrollType
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                        name="./commonConfig.ignoreHigherOrderLOEnrollment@TypeHint"
                        value="Boolean"
                        cq:showOnCreate="{Boolean}true"/>

                    <emitPageLinkEvents
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldDescription="This option tells whether to send the link click events to Adobe Captivate Prime application or to pass them to parent window. If enabled, clients can build custom redirects to other pages like Course page etc."
                        fieldLabel="Emit Page Link Events"
                        name="./commonConfig.emitPageLinkEvents"
                        cq:showOnCreate="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <top
                                jcr:primaryType="nt:unstructured"
                                text="top"
                                value="top"/>
                            <true
                                jcr:primaryType="nt:unstructured"
                                text="true"
                                value="true"/>
                        </items>
                    </emitPageLinkEvents>

                    <customization 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Customization"
                        fieldDescription="customization"
                        name="./theme.customization"
                        cq:showOnCreate="{Boolean}true"/>

                    <background
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                        name="./theme.background"
                        value="transparent"
                        cq:showOnCreate="{Boolean}true"/>

                    <primeTileColors
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Prime Tile Colors"
                        fieldDescription="Prime Tile Colors"
                        name="./primeTileColors"
                        value="#00000,#ffffff,#445566"
                        cq:showOnCreate="{Boolean}true"/>

                    <disableLinks
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        checked="true"
                        name="./commonConfig.disableLinks"
                        text="Disable/Hide Captivate Prime Links"
                        value="true"
                        cq:showOnCreate="{Boolean}true"/>
                     <disableLinksType
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                        name="./commonConfig.disableLinks@TypeHint"
                        value="Boolean"
                        cq:showOnCreate="{Boolean}true"/>

                    <primaryColor 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Primary Color"
                        fieldDescription="Primary Color"
                        name="./theme.primaryColor"
                        value="rgb(38,118,255)"
                        cq:showOnCreate="{Boolean}true"/>

                    <secondaryColor 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Seconday Color"
                        fieldDescription="Seconday Color"
                        name="./theme.secondaryColor"
                        value="rgb(0,145,255)"
                        cq:showOnCreate="{Boolean}true"/>

                </items>
            </column>
        </items>
    </content>
</jcr:root>