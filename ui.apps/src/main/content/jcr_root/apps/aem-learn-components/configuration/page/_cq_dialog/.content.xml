<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="ALM Configuration"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[alm.admin.configuration]">
    <content jcr:primaryType="nt:unstructured"
             sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <title jcr:primaryType="nt:unstructured"
                           sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                           name="./jcr:title"
                           value="ALM"/>
                    <magentoStore jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Store View"
                                    fieldDescription="The Store View identifier. If empty, no store view is included in the requests sent to the GraphQL endpoint."
                                    name="./magentoStore"
                                    cq:showOnCreate="{Boolean}true"/>

                    <magentoStoreDelete jcr:primaryType="nt:unstructured"
                                         sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                         name="./magentoStore@Delete"
                                         cq:showOnCreate="{Boolean}true"/>

                    <graphqlEndpoint jcr:primaryType="nt:unstructured"
                                     sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                     fieldLabel="GraphQL Proxy Path"
                                     fieldDescription="Path of the GraphQL endpoint proxy used by client-side CIF components."
                                     name="./magentoGraphqlEndpoint"
                                     required="{Boolean}true"
                                     value="/magento/graphql"
                                     defaultValue="/magento/graphql"
                                     cq:showOnCreate="{Boolean}true"/>

                    <graphqlEndpointDelete jcr:primaryType="nt:unstructured"
                                           sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                           name="./magentoGraphqlEndpoint@Delete"
                                           cq:showOnCreate="{Boolean}true"/>

                    <magentoRootCategoryId jcr:primaryType="nt:unstructured"
                                           sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                           name="./magentoRootCategoryId"
                                           fieldLabel="Catalog Root Category Id"
                                           required="{Boolean}true"/>

                    <magentoRootCategoryIdDelete jcr:primaryType="nt:unstructured"
                                                 sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                 name="./magentoRootCategoryId@Delete"
                                                 cq:showOnCreate="{Boolean}true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>