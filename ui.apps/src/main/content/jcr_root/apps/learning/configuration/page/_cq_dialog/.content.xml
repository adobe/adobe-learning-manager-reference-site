<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Adobe Learning Manager Configuration"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[alm.admin.configuration]">
    <content jcr:primaryType="nt:unstructured"
             sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                
                    <title jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                        name="./jcr:title"
                        value="adobe-learning-manager-config"/>

                    <usage
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldDescription="Adobe Learning Manager usage"
                        fieldLabel="Adobe Learning Manager usage"
                        granite:id="alm-usage-type-select"
                        name="./usageType"
                        cq:showOnCreate="{Boolean}true">
                        
                        <items jcr:primaryType="nt:unstructured">
                            <sites
                                jcr:primaryType="nt:unstructured"
                                text="For training internal employees (AEM + Learning Manager)"
                                value="aem-sites"/>

                            <commerce
                                jcr:primaryType="nt:unstructured"
                                text="For hosting paid courses on learning (AEM + Learning Manager + Commerce)"
                                value="aem-commerce"/>

                            <es
                                jcr:primaryType="nt:unstructured"
                                text="For showcasing products to customers & partners without account creation (AEM + Learning Manager + Training Metadata)"
                                value="aem-es"/>
                        </items>
                    </usage>

                    <almBaseURL 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Adobe Learning Manager url"
                        fieldDescription="Adobe Learning Manager url"
                        name="./almBaseURL"
                        required="{Boolean}true"
                        cq:showOnCreate="{Boolean}true"/>

                    <accountId 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Account ID"
                        fieldDescription="Account ID"
                        name="./accountId"
                        required="{Boolean}true"
                        cq:showOnCreate="{Boolean}true"/>

                    <clientId 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Client ID"
                        fieldDescription="Client ID"
                        name="./clientId"
                        required="{Boolean}true"
                        cq:showOnCreate="{Boolean}true"/>

                    <clientSecret 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Client secret"
                        fieldDescription="Client secret"
                        name="./clientSecret"
                        required="{Boolean}true"
                        cq:showOnCreate="{Boolean}true"/>

                    <authorRefreshToken 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Author refresh token"
                        fieldDescription="Author refresh token"
                        name="./authorRefreshToken"
                        granite:rel="aem-sites"
                        required="{Boolean}true"
                        cq:showOnCreate="{Boolean}true"/>

                    <almCdnBaseUrl 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Adobe Learning Manager cdn base url"
                        fieldDescription="Adobe Learning Manager cdn base url"
                        name="./almCdnBaseUrl"
                        granite:rel="aem-commerce aem-es"
                        required="{Boolean}true"
                        cq:showOnCreate="{Boolean}true"/>

                    <commerceURL 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Adobe Commerce url"
                        fieldDescription="Adobe Commerce url"
                        name="./commerceURL"
                        granite:rel="aem-commerce"
                        required="{Boolean}true"
                        cq:showOnCreate="{Boolean}true"/>

                    <graphqlProxyPath 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="GraphQL proxy path "
                        fieldDescription="Path of the GraphQL endpoint proxy used by client-side components."
                        name="./graphqlProxyPath"
                        granite:rel="aem-commerce"
                        value="/alm/graphql"
                        required="{Boolean}true"
                        cq:showOnCreate="{Boolean}true"/>
                    <commerceStoreName 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Adobe Commerce store name"
                        fieldDescription="Commerce Store Name"
                        name="./commerceStoreName"
                        value="default"
                        granite:rel="aem-commerce"
                        required="{Boolean}true"
                        cq:showOnCreate="{Boolean}true"/>
                    <refreshToken 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Admin refresh token"
                        fieldDescription="Admin refresh token"
                        name="./refreshToken"
                        granite:rel="aem-commerce aem-es"
                        required="{Boolean}true"
                        cq:showOnCreate="{Boolean}true"/>

                    <esBase 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Training Metadata base url"
                        fieldDescription="Training Metadata base url"
                        name="./esBaseUrl"
                        granite:rel="aem-es"
                        required="{Boolean}true"
                        cq:showOnCreate="{Boolean}true"/>

                    <almRegister 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Adobe Learning Manager register url"
                        fieldDescription="Adobe Learning Manager register url"
                        name="./almRegisterUrl"
                        granite:rel="aem-es"
                        cq:showOnCreate="{Boolean}true"/>

                    <siteMap
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        value="true"
                        name="./siteMap"
                        text="Create site map"
                        granite:rel="aem-commerce aem-es"
                        cq:showOnCreate="{Boolean}true"/>
                    <sitemapTrainingPath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="SiteMap training page path"
                        fieldDescription="SiteMap training page path"
                        name="./sitemapTrainingPath"
                        granite:rel="aem-commerce aem-es"
                        required="{Boolean}true"
                        cq:showOnCreate="{Boolean}true"/>

                    <nomenclatureData
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                        name="./nomenclatureData"
                        value=""
                        cq:showOnCreate="{Boolean}true"/>

                    <nomenclature
                        granite:id="fetch-nomenclature-button"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/button"
                        text="Sync terminology"
                        granite:rel="aem-commerce aem-es"
                        variant="primary"/>





                    <embWidgetSection
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                        level="2"
                        text="Embeddable Widget Configurations"
                        granite:id="emb-widget-config-section"
                        cq:showOnCreate="{Boolean}true"/>

                    <higherOrderEnroll
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        checked="false"
                        name="./commonConfig.ignoreHigherOrderLOEnrollment"
                        text="Ignore higher order training enrollment"
                        value="false"
                        cq:showOnCreate="{Boolean}true"/>
                     <higherOrderEnrollType
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                        name="./commonConfig.ignoreHigherOrderLOEnrollment@TypeHint"
                        value="Boolean"
                        cq:showOnCreate="{Boolean}true"/>

                    <customization 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Customization"
                        fieldDescription="customization"
                        name="./theme.customization"
                        cq:showOnCreate="{Boolean}true"/>

                    <primaryColor 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                        fieldLabel="Primary color"
                        fieldDescription="Primary color"
                        name="./theme.primaryColor"
                        value="rgb(38,118,255)"
                        cq:showOnCreate="{Boolean}true"/>

                    <secondaryColor 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                        fieldLabel="Seconday color"
                        fieldDescription="Seconday color"
                        name="./theme.secondaryColor"
                        value="rgb(0,145,255)"
                        cq:showOnCreate="{Boolean}true"/>




                    <background
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                        name="./theme.background"
                        value="transparent"
                        cq:showOnCreate="{Boolean}true"/>

                    <disableLinks
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                        name="./commonConfig.disableLinks"
                        value="true"
                        cq:showOnCreate="{Boolean}true"/>
                     <disableLinksType
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                        name="./commonConfig.disableLinks@TypeHint"
                        value="Boolean"
                        cq:showOnCreate="{Boolean}true"/>

                    <emitPageLinkEvents
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                        name="./commonConfig.emitPageLinkEvents"
                        value="true"
                        cq:showOnCreate="{Boolean}true" />

                </items>
            </column>
        </items>
    </content>
</jcr:root>